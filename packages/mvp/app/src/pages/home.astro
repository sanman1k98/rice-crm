---
import Layout from '@/layouts/MainLayout.astro';

const { user } = Astro.locals;

if (!user)
	return Astro.redirect('/login');

const greeting = `Welcome back ${user.fullname}`;
---

<Layout
	meta={{
		title: 'Home',
		description: greeting,
	}}
>
	<div class="pico container">
		<h1>Home</h1>
	</div>

	<section class="flex flex-col mx-auto justify-center text-center">
		<h2 class="pb-[10svh] font-bold text-5xl sm:text-7xl md:text-9xl">TODO</h2>
	</section>
</Layout>
